generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model posts {
  id       String   @id @default(cuid())
  content  String?
  email    String?
  likes    String[]
  comments String[]
  date     DateTime
}

model users {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String
  bio       String?
  followers String[]
  following String[]
}

model messages {
  id        String   @id @default(cuid())
  me        String
  roomName  String
  recipient String?
  message   Json[]
  users     String[]
  date      DateTime
}
